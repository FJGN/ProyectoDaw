{% extends "TeachingGeneralBundle::template.html.twig" %}

{% block breadcrumps %}{{ controller }}, <a href="{{ path('teaching_user_homepage') }}">Volver</a>{% endblock %}

{% block content %}
    {# Menu #}
    <div class="container-fluid">
        <div class="row">
            {% block menu %}{% endblock %}
        </div>
    </div>
    
    {# Content #}
    <div class="container-fluid">
        <div class="row">
            
            {# Show actions in controller #}
            <div class="col-sm-2 col-md-2 col-lg-2" style="background-color: gray;">
                {% block actions %}{% endblock%}
            </div>

            
            {# Show result of action #}
            <div class="col-sm-10 col-md-10 col-lg-10">
                {% block result %}{% endblock %}
            </div>
            
        </div>
    </div>
{% endblock %}

        
